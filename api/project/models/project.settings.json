{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "Project",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "startDate": {
      "type": "date"
    },
    "endDate": {
      "type": "date"
    },
    "title": {
      "type": "string",
      "required": true
    },
    "subTitle": {
      "type": "string"
    },
    "stacks": {
      "collection": "stack",
      "via": "project"
    },
    "desc": {
      "type": "component",
      "repeatable": true,
      "component": "description.project-description"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    }
  }
}
